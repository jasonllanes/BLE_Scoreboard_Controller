<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp">

    <TextView
        android:id="@+id/tv_welcome"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Welcome!"
        android:textSize="20sp"
        android:gravity="center"
        android:padding="10dp"/>
    
    <TextView
        android:id="@+id/tv_status"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Status: Disconnected"
        android:textSize="16sp"
        android:gravity="center"
        android:padding="5dp"
        android:layout_marginBottom="16dp"/>

    <Button
        android:id="@+id/btn_connect_device"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Connect to Scoreboard"
        android:layout_marginBottom="16dp"/>
        
    <!-- Clock Preview -->
    <androidx.cardview.widget.CardView
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="16dp"
        app:cardCornerRadius="8dp"
        app:cardElevation="4dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="8dp">
            
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Clock Preview"
                android:textSize="16sp"
                android:textStyle="bold"
                android:gravity="center"
                android:layout_marginBottom="8dp"/>

            <!-- Game Clock -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center"
                android:layout_marginBottom="8dp">

                <TextView
                    android:id="@+id/tv_home_min1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="1"
                    android:textSize="32sp"
                    android:textStyle="bold"
                    android:background="#222222"
                    android:textColor="#FF0000"
                    android:padding="6dp"/>

                <TextView
                    android:id="@+id/tv_home_min2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="0"
                    android:textSize="32sp"
                    android:textStyle="bold"
                    android:background="#222222"
                    android:textColor="#FF0000"
                    android:padding="6dp"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text=":"
                    android:textSize="32sp"
                    android:textStyle="bold"
                    android:textColor="#FF0000"
                    android:padding="6dp"/>

                <TextView
                    android:id="@+id/tv_home_sec1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="0"
                    android:textSize="32sp"
                    android:textStyle="bold"
                    android:background="#222222"
                    android:textColor="#FF0000"
                    android:padding="6dp"/>

                <TextView
                    android:id="@+id/tv_home_sec2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="0"
                    android:textSize="32sp"
                    android:textStyle="bold"
                    android:background="#222222"
                    android:textColor="#FF0000"
                    android:padding="6dp"/>
            </LinearLayout>
            
            <!-- Shot Clock -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="SHOT:"
                    android:textStyle="bold"/>

                <TextView
                    android:id="@+id/tv_home_shotclock"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="24"
                    android:textSize="20sp"
                    android:textStyle="bold"
                    android:background="#222222"
                    android:textColor="#FF0000"
                    android:layout_marginStart="8dp"
                    android:paddingStart="8dp"
                    android:paddingEnd="8dp"/>
            </LinearLayout>
        </LinearLayout>
    </androidx.cardview.widget.CardView>
        
    <Button
        android:id="@+id/btn_control_panel"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Open Control Panel"
        android:layout_marginBottom="16dp"/>
    
    <Button
        android:id="@+id/btn_clock_control"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Clock Control"
        android:layout_marginBottom="16dp"/>
        
    <Button
        android:id="@+id/btn_settings"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Settings"
        android:layout_marginBottom="16dp"/>
        
    <Button
        android:id="@+id/btn_logout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Log Out"/>

</LinearLayout>
